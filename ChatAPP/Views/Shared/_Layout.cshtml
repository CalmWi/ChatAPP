<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ChatApp</title>

    <link rel="stylesheet" href="~/css/site.css">

</head>
<body>
    <div class="main">
        <div class="menu">
            @if (User.Identity.IsAuthenticated)
                    {
                        <vc:room></vc:room>
                    }
        </div>
        <div class="content">
            <div class="nav-menu">
                <div class="nav-menu-icon"></div>
                <div class="type-nav-menu">Messaging</div>
                <div class="exit">
                    <form asp-controller="Account" asp-action="Logout">
                        <button class="exit-button" type="submit">Exit</button>
                    </form>
                </div>
            </div>
            <div class="chat-content">
                <div class="messages">
                    @RenderBody()
                </div>
            </div>
        </div>
        <div class="modal" id="create-room-modal">
        <form asp-controller="Home" asp-action="CreateRoom" class="modal-body">
            <button type="button" class="close" onclick="closeModal()">X</button>
            <header>Create Room</header>
            <div>
                <input name="name">
            </div>
            <footer>
                <button>Create</button>
            </footer>
        </form>
    </div>

    <div class="modal" id="remove-room-modal">
        <form asp-controller="Home" asp-action="RemoveRoom" class="modal-body">
            <button type="button" class="close" onclick="closeRemoveModal()">X</button>
            <header>Remove Room</header>
            <div>
                <input name="name">
            </div>
            <footer>
                <button>Remove</button>
            </footer>
        </form>
    </div>
    </div>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts",false)
</body>

</html>